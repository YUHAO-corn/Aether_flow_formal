{
  "manifest_version": 3,
  "name": "AetherFlow",
  "version": "1.0.0",
  "description": "AetherFlow浏览器插件 - 让AI潜能随需释放",
  "action": {
    "default_title": "AetherFlow"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.openai.com/*",
    "*://*.claude.ai/*",
    "*://*.anthropic.com/*",
    "*://*.gemini.google.com/*",
    "*://*.bard.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.openai.com/*",
        "*://*.claude.ai/*",
        "*://*.anthropic.com/*",
        "*://*.gemini.google.com/*",
        "*://*.bard.google.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
} 