{
  "name": "aetherflow-backend",
  "version": "1.0.0",
  "description": "AetherFlow后端服务",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:coverage": "./scripts/test.sh --coverage",
    "test:watch": "./scripts/test.sh --watch",
    "test:verbose": "./scripts/test.sh --verbose",
    "test:single": "./scripts/test.sh --pattern",
    "test:report": "node src/tests/runTests.js",
    "lint": "eslint .",
    "test:auth": "jest auth",
    "test:prompt": "jest prompt",
    "test:tag": "jest tag",
    "test:conversation": "jest conversation",
    "test:activity": "jest activity",
    "test:apiKey": "jest apiKey",
    "test:parallel": "jest --maxWorkers=50%",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:integration": "jest --testPathPattern=src/tests/.*Integration.test.js",
    "test:unit": "jest --testPathPattern=src/tests/(?!.*Integration).*.test.js",
    "test:fast": "jest --bail --forceExit",
    "test:ci": "jest --ci --bail --forceExit --detectOpenHandles",
    "test:mock": "MOCK_DB=true jest --bail --forceExit",
    "test:quick": "jest --bail --forceExit --silent",
    "seed": "node src/scripts/seedDB.js",
    "mock-api": "node src/scripts/mockApiServer.js"
  },
  "keywords": [
    "aetherflow",
    "prompt",
    "ai",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-mock-req-res": "^1.0.2",
    "mongodb-memory-server": "^7.6.3",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
